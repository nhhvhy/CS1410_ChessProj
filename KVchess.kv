<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Text Here'
        Button:
            id: playButton
            text: 'Play Button'
            on_press: root.manager.current = 'GameScreen'
            size_hint_y: 0.2

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            id: playArea
            orientation: 'rl-bt'
            cols: 8
            spacing: 0
            size_hint_y: 0.8

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            size_hint_x: 1
            Button:
                id: statusIndicator
                size_hint_x: 0.8
                text: 'White\'s Turn'
                halign: 'center'
                valign: 'middle'
            Button:
                id: backButton
                size_hint_x: 0.2
                text: 'Go Home'
                on_press: root.manager.current = 'MenuScreen'
