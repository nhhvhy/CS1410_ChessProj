<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color: 
                rgba: 0.6, 0.7, 0.8, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Kivy Chess'
            color: 1, 1, 1, 1
            font_size: '40sp'
            bold: True
            halign: 'center'
        Label:
            text: 'CS1410 Final Project'
            color: 1, 1, 1, 1
            font_size: '30sp'
            halign: 'center'
        Label:
            text: 'Max Ostler'
            color: 1, 1, 1, 1
            font_size: '30sp'
            halign: 'center'
        Button:
            id: playButton
            text: 'Play!'
            on_press: root.manager.current = 'GameScreen'
            size_hint_y: None
            size_hint_x: None
            width: 250
            height: 80
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            background_color: 0.6, 0.7, 0.8, 1
            font_size: '24sp'
            color: 1, 1, 1, 1
            bold: True
        Label:  # Used to space the button out
            text: ''



<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            id: playArea
            orientation: 'rl-bt'
            cols: 8
            spacing: 0
            size_hint_y: 0.8

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            size_hint_x: 1
            Button:
                id: statusIndicator
                size_hint_x: 0.8
                text: 'White\'s Turn'
                halign: 'center'
                valign: 'middle'
            Button:
                id: backButton
                size_hint_x: 0.2
                text: 'Go Home'
                on_press: root.manager.current = 'MenuScreen'
